@model TicariOtomasyon.Models.Classes.Person
@{
    ViewBag.Title = "PersonAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Person Add Page</h2>
<br />


<form class="form-group" method="post">
    @Html.LabelFor(x => x.PersonName)
    @Html.TextBoxFor(x => x.PersonName, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.PersonSurName)
    @Html.TextBoxFor(x => x.PersonSurName, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.PersonImage)
    @Html.TextBoxFor(x => x.PersonImage, new { @class = "form-control" })
    <br />


    @Html.LabelFor(x => x.Department)
    @Html.DropDownListFor(x => x.DepartmentId, (List<SelectListItem>)ViewBag.vl1, new { @class = "form-control" })
    <br />

    <br />
    <button class="btn btn-success  btn-lg">ADD</button>
</form>





