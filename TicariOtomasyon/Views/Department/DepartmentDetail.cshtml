@using TicariOtomasyon.Models.Classes
    @model List<Person>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Department Detail Page</h2><hr />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">DEPARTMENT NAME :@ViewBag.d</li>
    </ol>
      <table class="table table-hover table-bordered">
          <tr>
              <th class="text-center">PERSON ID</th>
              <th class="text-center">PERSON NAME</th>
              <th class="text-center">PERSON SURNAME</th>
              <th class="text-center">PERSON IMAGE</th>
              <th class="text-center">HANDS</th>

          </tr>

          @foreach (var person in Model)
          {
      <tr>

          <td class="text-center">@person.PersonId</td>
          <td class="text-center">@person.PersonName</td>
          <td class="text-center">@person.PersonSurName</td>
          <td class="text-center">@person.PersonImage</td>
   
          <td class="text-center"><a class='btn btn-warning btn-xs' href="/Department/DepartmentPersonHands/@person.PersonId"><span class="glyphicon glyphicon-list-alt"></span> DETAIL</a></td>
      </tr>

                  }
             

          </table>
