@model TicariOtomasyon.Models.Classes.Invoice
@{
    ViewBag.Title = "InvoiceFetch";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Invoice Update Page</h2>
<br />
@using (Html.BeginForm("InvoiceUpdate", "Invoice", FormMethod.Post))
{
    @Html.HiddenFor(x =>x.InvoiceId)
    @Html.LabelFor(x => x.InvoiceSerialNumber)
    @Html.TextBoxFor(x => x.InvoiceSerialNumber, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.InvoiceOrderNumber)
    @Html.TextBoxFor(x => x.InvoiceOrderNumber, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.InvoiceTaxOffice)
    @Html.TextBoxFor(x => x.InvoiceTaxOffice, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.InvoiceDate)
    @Html.TextBoxFor(x => x.InvoiceDate, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.InvoiceHour)
    @Html.TextBoxFor(x => x.InvoiceHour, new { @class = "form-control" })
    <br />

    @Html.LabelFor(x => x.InvoiceToSubmit)
    @Html.TextBoxFor(x => x.InvoiceToSubmit, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceReceive)
    @Html.TextBoxFor(x => x.InvoiceReceive, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">UPDATE</button>
}


