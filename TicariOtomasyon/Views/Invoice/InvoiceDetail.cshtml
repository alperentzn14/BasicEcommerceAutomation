@using TicariOtomasyon.Models.Classes
@model List<InvoicePen>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Invoice Detail Page</h2>
<hr />

<table class="table table-hover table-bordered">
    <tr>
        <th class="text-center"> ID</th>
        <th class="text-center">DESCRİPTİON</th>
        <th class="text-center">QUANTİTY</th>
        <th class="text-center">UNİT PRİCE</th>
        <th class="text-center">AMOUNT</th>

    </tr>

    @foreach (var ınvoicePen in Model)
    {
        <tr>

            <td class="text-center">@ınvoicePen.InvoicePenId</td>
            <td class="text-center">@ınvoicePen.InvoiceDescription</td>
            <td class="text-center">@ınvoicePen.InvoiceQuantity</td>
            <td class="text-center">@ınvoicePen.InvoiceUnitPrice</td>
            <td class="text-center">@ınvoicePen.InvoiceAmount</td>
        </tr>

    }


</table>
<a href="/Invoice/NewPen/" class="btn btn-success">NEW INVOICE PEN ADD</a>

